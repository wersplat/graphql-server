{
  "name": "bodega-graphql-server",
  "version": "1.0.0",
  "description": "GraphQL API server for Bodega Cats GC - unifying endpoints for admin and public frontends",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/clean-server.ts",
    "dev:verbose": "tsx watch src/index.ts",
    "build": "tsc && node scripts/build.js",
    "start": "node dist/clean-server.js",
    "start:verbose": "node dist/index.js",
    "test": "jest",
    "test:server": "node scripts/test-server.js",
    "test:pg-graphql": "node scripts/test-pg-graphql.js",
    "test:clean-server": "node scripts/test-clean-server.js",
    "start:both": "node scripts/start-servers.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "graphql",
    "apollo-server",
    "typescript",
    "bodega-cats",
    "gaming"
  ],
  "author": "Bodega Cats GC",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@supabase/supabase-js": "^2.38.4",
    "apollo-server-express": "^3.12.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}