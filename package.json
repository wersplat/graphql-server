{
  "name": "bodega-graphql-server",
  "version": "1.0.0",
  "description": "GraphQL API server for Bodega Cats GC - Phase 1 implementation with comprehensive CRUD operations, analytics, and enhanced match management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && node scripts/build.js",
    "start": "node dist/index.js",
    "test": "node scripts/test-phase1-schema.js",
    "test:schema": "node scripts/test-phase1-schema.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "dev:build": "npm run build && npm run start"
  },
  "keywords": [
    "graphql",
    "apollo-server",
    "typescript",
    "bodega-cats",
    "gaming",
    "esports",
    "analytics",
    "match-management",
    "player-management",
    "team-management",
    "event-management",
    "phase1-implementation"
  ],
  "author": "Bodega Cats GC",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@apollo/server-plugin-response-cache": "^4.1.1",
    "@apollo/utils.keyvaluecache": "^4.0.0",
    "@sentry/node": "^10.2.0",
    "@supabase/supabase-js": "^2.38.4",
    "@types/uuid": "^10.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "graphql": "^16.11.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^1.1.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "jose": "^5.9.3",
    "uuid": "^11.1.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/graphql-depth-limit": "^1.1.6",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.57.1",
    "globals": "^16.3.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.39.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bodega-cats-gc/graphql-server.git"
  },
  "bugs": {
    "url": "https://github.com/bodega-cats-gc/graphql-server/issues"
  },
  "homepage": "https://github.com/bodega-cats-gc/graphql-server#readme"
}